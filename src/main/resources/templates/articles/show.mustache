{{>layouts/header}}

<div class = "jumbotron">
    <h1>Article 상세보기</h1>
    <hr>
    <p>articles/show.mustache</p>
</div>

<table class = "table table-hover">
    <tbody>
    {{#article}}
        <tr>
            <th>글번호</th>
            <td>{{id}}</td>
        </tr>

        <tr>
            <th>제목</th>
            <td>{{title}}</td>
        </tr>

        <tr>
            <th>내용</th>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>

    <tfoot>
    <tr>
        <th></th>
        <td>
            <a href = "/articles/edit/{{id}}" class = "btn btn-info">수정</a>

            <button class = "btn btn-danger" id = "article-destroy-btn">삭제</button>
        </td>
    </tr>
    </tfoot>

</table>

<a class = "btn btn-success btn-block" href = "/articles">목록</a>

<Script src = "/js/app/article.js"></script>

{{>layouts/footer}}